<p id="notice"><%= notice %></p>
<div class="jumbotron">
	<h3 class="text-center">Hello, <%= User.find(@order.user_id).name %></h3>
	<h5 class="text-center">What would you like to order today?</h5>
	<hr>

	<div class="container">
		<%= render "comments/comment" %>
		<br>
		<br>
		<br>
		<div class="container">
			<div class="container">
				<%= render "comments/form" %>
			</div>
		</div>		
	</div>
</div>

	
<div align="center">
	<% visibility = current_user.visibility %>
	<% case visibility %>
		<% when 1 %>
			<p><%= render 'orders/level_for_user' %></p>
		<% else %>
			<p><%= render 'orders/level_for_owner' %></p>
	<% end %>
	<p><%= button_to 'Cancel This Order', @order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-lg btn-danger" %></p>
</div>

