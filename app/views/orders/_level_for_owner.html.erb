<% @order_v = Order.find(params[:id]).visibility %>
<% case @order_v %>
	<% when 1 %>
		<%= link_to 'To Read', levelup_order_path(@order), data: { confirm: 'Are you sure?' }, class: "btn btn-lg btn-success" %>
	<% when 2 %>
		<%= link_to 'Unread', leveldown_order_path(@order), data: { confirm: 'Are you sure?' }, class: "btn btn-lg btn-warning" %>
		<%= link_to 'Shipped', levelup_order_path(@order), data: { confirm: 'Are you sure?' }, class: "btn btn-lg btn-success" %>
	<% when 3 %>
		<%= link_to 'Un-shipped', leveldown_order_path(@order), data: { confirm: 'Are you sure?' }, class: "btn btn-lg btn-warning" %>
<% end %>